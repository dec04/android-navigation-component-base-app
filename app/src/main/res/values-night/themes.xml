<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Gazoil" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/deep_purple_300</item>
        <item name="colorPrimaryVariant">@color/deep_purple_500</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
    </style>

    <!-- ToolBar -->
    <style name="Theme.Gazoil.ToolBarStyle" parent="Theme.Gazoil">
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:textColorPrimary">?attr/colorOnPrimary</item>
        <item name="android:textColorSecondary">?attr/colorOnPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="actionMenuTextColor">?attr/colorOnPrimary</item>
        <item name="iconTint">?attr/colorOnPrimary</item>
    </style>
</resources>